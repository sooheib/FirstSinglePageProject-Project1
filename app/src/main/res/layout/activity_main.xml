<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Image"
        android:src="@drawable/seasons"
        android:paddingTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/name"
        android:paddingLeft="16dp"
        android:textColor="#4CAF50"
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seasons Supermarket"
        android:textAllCaps="true"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Image"
        android:orientation="vertical">
        <TextView
            android:id="@+id/desc"
            android:text="Local Family Supermarket"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/address"
            android:text="68-18 Main St. Queens, NY 11367"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/phone"
            android:text="PHONE: (718)-268--6469"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/hrsTitle"
            android:text="HOURS:"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/days"
                android:text="Sun.-Tue.\nWed.\nThurs.\nFri.\nSat."
                android:textSize="20sp"
                android:paddingLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/hrs"
                android:text="7AM-9PM\n7AM-10PM\n7AM-12AM\n6AM-5PM\nCLOSED"
                android:textSize="20sp"
                android:paddingLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
